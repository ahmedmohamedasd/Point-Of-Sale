@model IEnumerable<Category>

<ul class="list-group">
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="BarItems" asp-action="Index">All Products</a>
    </li>
</ul>

@foreach (var item in Model)
{
    <li class="list-group-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="BarItems"
           asp-action="ProductsByCategory"
           asp-route-id="@item.Id">@item.CategoryName</a>
    </li>

}