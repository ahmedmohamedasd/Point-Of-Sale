@model PointOfSale.Models.ViewModel.EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title-wrap bar-success">
                    <h4 class="card-title">Edit user </h4>
                </div>
            </div>
            <div class="card-body">
                <div class="px-3">
                    <form class="form form-horizontal" asp-action="EditUser">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group row">
                            <input type="hidden" asp-for="@Model.UserId" />
                            <label asp-for="@Model.Name" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.Name" class="form-control" />
                            </div>
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <label asp-for="@Model.Email" class="col-md-3 label-control"></label>
                            <div class="col-md-9">
                                <input asp-for="@Model.Email" class="form-control" />

                            </div>
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>




                        <div class="form-group row">
                            <label class="col-md-3 label-control">Role Name  </label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(c => c.RoleId, new SelectList(Model.Roles, "Id", "Name"), new { @class = "form-control" })

                            </div>
                            <span asp-validation-for="@Model.RoleId" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" asp-route-UserId="@Model.UserId" value="Update" class="btn btn-primary" />
                            <a class="btn btn-danger" asp-action="Users" asp-controller="Admin">Cancel</a>
                        </div>
                    </form>

                </div>
            </div>


        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



